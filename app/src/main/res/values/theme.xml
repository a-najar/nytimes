<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TextAppearance.Toolbar.Title" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/black</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="AppDialogStyle" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="android:background">@android:color/white</item>
        <item name="buttonBarPositiveButtonStyle">
            @style/Button.Dialog.Text
        </item>
        <item name="buttonBarNegativeButtonStyle">
            @style/Button.Dialog.Text
        </item>
        <item name="buttonBarNeutralButtonStyle">@style/Button.Dialog.Text</item>
        <item name="android:textAppearanceSmall">@style/Dialog.TextAppearance</item>
        <item name="android:textAppearanceMedium">@style/Dialog.TextAppearance</item>
        <item name="android:textAppearanceLarge">@style/Dialog.TextAppearance</item>
    </style>

    <style name="Dialog.TextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/reguler</item>
    </style>

    <style name="Button.Dialog.Text" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">?colorTextPrimary</item>
        <item name="android:fontFamily">@font/black</item>
        <item name="android:textAllCaps">false</item>
    </style>

</resources>